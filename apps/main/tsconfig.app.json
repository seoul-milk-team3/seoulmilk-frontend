{
  "extends": "@seoulmilk/tsconfig/react-components.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/assets/*": ["src/assets/*"],
      "@/pages/*": ["src/pages/*"],
      "@/components/*": ["src/components/*"],
      "@/styles/*": ["src/styles/*"],
      "@/constants/*": ["src/constants/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/apis/*": ["src/apis/*"],
      "@/utils/*": ["src/utils/src"],
      "@/routes/*": ["src/routes/*"]
    },
    "jsxImportSource": "@emotion/react"
  },
  /*svg*/
  "exclude": ["node_modules", "dist"],
  "include": ["src", "../../packages/ui/src/FileUpload/UploadSection", "../../packages/ui/src/FileUpload/UploadTopMessage"]
}
